.flex {
    display: flex;
}

.align--center {
    align-items: center;
}

.align--start {
    align-items: flex-start;
}

.align--end {
    align-items: end;
}

.align--stretch {
    align-items: stretch;
}

.justify--center {
    justify-content: center;
}

.justify--start {
    justify-content: start;
}

.justify--between {
    justify-content: space-between;
}

.justify--around {
    justify-content: space-around;
}

.justify--evenly {
    justify-content: space-evenly;
}