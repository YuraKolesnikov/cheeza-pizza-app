.rating-wrapper {
  display: flex;
  align-items: center;
  column-gap: 18px;
}

.stars-wrapper {
  display: flex;
  align-items: center;
  column-gap: 3px;
}

.star {
  fill: #E8E8E8;
  transition: fill .2s ease-in-out;
}

.star--filled {
  fill: var(--color-gold);
}

.rating {
  font-size: var(--font-size-2);
  color: var(--color-dark-gold);
}
